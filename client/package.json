{
  "name": "dotslashsteve.sh-client",
  "homepage": "https://dotslashsteve.sh",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build": "sh ./build.sh",
    "watch": "cd dist && live-server --no-browser --port=5000 --wait=2500",
    "dev": "concurrently \"npm run dev:build\" \"npm run watch\"",
    "dev:public": "npm run build && cd dist && ngrok http file:///$(pwd)",
    "dev:build": "nodemon",
    "test": "jest --config jest.config.ts",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "execMap": {
      "js": "node"
    },
    "watch": [
      "src",
      "public"
    ],
    "ext": "js json jsx ts tsx html txt css",
    "ignore": [
      "node_modules",
      "build",
      "dist",
      "coverage",
      "tests",
      "docs"
    ],
    "exec": "npm run build",
    "delay": 500
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "concurrently": "^7.2.2",
    "eslint": "^8.21.0",
    "eslint-plugin-jest": "^26.8.7",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "live-server": "^1.2.2",
    "nodemon": "^2.0.16",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1"
  },
  "dependencies": {
    "arch": "^2.2.0"
  }
}
