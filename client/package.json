{
  "name": "dotslashsteve.sh-client",
  "homepage": "https://dotslashsteve.sh",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build": "sh ./build.sh",
    "watch": "cd dist && live-server --no-browser --port=8080 --wait=1000",
    "dev": "concurrently \"npm run dev:build\" \"npm run watch\"",
    "dev:build": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "execMap": {
      "js": "node"
    },
    "watch": [
      "src",
      "public"
    ],
    "ext": "js json jsx ts tsx html txt css",
    "ignore": [
      "node_modules",
      "build",
      "dist",
      "coverage",
      "tests",
      "docs"
    ],
    "exec": "npm run build",
    "delay": 500
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "nodemon": "^2.0.16"
  }
}
